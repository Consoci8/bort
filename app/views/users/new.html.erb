<% @user.password = @user.password_confirmation = nil %>
<%= title "Signup", :h2 %>
<% form_for @user do |f| %>
	<%= f.error_messages %>
	<fieldset>
		<legend>Your Details</legend>
		<ul>
			<li>
				<%= f.label :login, 'Username', :class => 'desc' %>
				<%= f.text_field :login, :class => "text" %>
			</li>
			<li>
				<%= f.label :email, nil, :class => 'desc' %>
				<%= f.text_field :email, :class => "text"  %>
			</li>
			<li>
				<%= f.label :password, nil, :class => 'desc' %>
				<%= f.password_field :password, :class => "text"  %>
			</li>
			<li>
				<%= f.label :password_confirmation, 'Confirm Password', :class => 'desc' %>
				<%= f.password_field :password_confirmation, :class => "text"  %>
			</li>
		</ul>
	</fieldset>
	<fieldset>
		<legend>Signup with OpenID</legend>
		<ul>
			<li>
				<label for="openid_url" class="desc">OpenID URL</label>
				<%= text_field_tag :openid_url, params[:openid_url] || params['openid.identity'], :class => "text"  %>
			</li>
		</ul>
	</fieldset>
	<div class="buttons">
		<%= submit_tag 'Sign up' %>
	</div>
<% end %>
