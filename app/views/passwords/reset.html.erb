<%= title "Reset Your Password", :h2 %>
<% form_for :user, :url => { :action => 'update_after_forgetting' } do |f| %>
  <%= f.error_messages %>
  <p>Please enter a new password and confirm it.</p>
	<fieldset>
		<legend>Update Password</legend>
		<ol>
			<li>
		    <%= f.label :password, nil, :class => 'desc' %>
		    <%= f.password_field :password, :class =>'text' %>
			</li>
			<li>
		    <%= f.label :password_confirmation, nil, :class => 'desc' %>
		    <%= f.password_field :password_confirmation, :class => 'text' %>
			</li>
		</ol>
	</fieldset>
	<%= hidden_field_tag :reset_code, params[:reset_code] %>
	<div class="buttons">
    <%= f.submit "Submit" %>
	</div>
<% end %>
