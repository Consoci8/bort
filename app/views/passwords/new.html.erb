<%= title "Forgot Your Password?", :h2 %>
<% form_for @password do |f| %>
  <%= f.error_messages %>
	<fieldset>
		<legend>Enter Your Email Address</legend>
		<ul>
			<li>			
		    <%= f.label :email, nil, :class => 'desc' %>
		    <%= f.text_field :email, :class => 'field text' %>
			</li>
		</ul>
	</fieldset>
	<div class="buttons">
  	<%= f.submit "Submit" %>
	</div>
<% end %>

