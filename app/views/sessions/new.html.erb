<%= title "Login", :h2 %>
<% form_tag session_path do %>
	<fieldset>
		<legend>Your Details</legend>
		<ol>
			<li>
				<%= label_tag 'login', 'Username', :class => 'desc' %>
				<%= text_field_tag 'login', @login, :class=>"text" %>
			</li>
			<li>
				<%= label_tag 'password', nil, :class => 'desc' %>
				<%= password_field_tag 'password', nil, :class=>"text"  %>
			</li>
			<li>
				<%= label_tag 'remember_me', 'Remember me' %>
				<%= check_box_tag 'remember_me', '1', @remember_me %>
			</li>
		</ol>
	</fieldset>
	<fieldset>
		<legend>Login with OpenID</legend>
		<ol>
			<li>
				<%= label_tag 'openid_url', 'OpenID URL', :class=>'desc' %>
				<%= text_field_tag 'openid_url', nil, :class=>"text"  %>
			</li>
		</ol>
	</fieldset>
	<div class="buttons">
		<%= submit_tag 'Login' %>
		<%= link_to 'Forgotten Password', forgot_password_path %>
	</div>
<% end -%>
